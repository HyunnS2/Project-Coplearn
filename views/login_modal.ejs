  <body>
    <!-- header -->
    <header>
      <nav class="navbar_hi">
        <div class="navbar_logo_hi">
          <i class=""></i>
          <a href="">Coplean</a>
        </div>
        <ul class="navbar_menu_hi">
          <li><a id="home_hi" href="#">HOME</a></li>
          <li><a id="list_hi" href="#">프로젝트 목록</a></li>
          <li>
